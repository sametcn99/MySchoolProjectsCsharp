@model IEnumerable<Ogrenci>
@{
    ViewData["Title"] = "Ogrenci Listesi";
}

<h1>Ogrenci Listesi</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Numara</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Ad</td>
                <td>@item.Soyad</td>
                <td>@item.Numara</td>
                <td><a href="/Ogrenci/OgrenciDetay/@item.Ogrenciid" class="btn btn-sm btn-primary text-white">Düzenle</a>  <a href="/Ogrenci/OgrenciSil/@item.Ogrenciid" class="btn btn-sm btn-danger text-white" onclick="return confirm('Emin misiniz?')">Sil</a></td>
            </tr>
        }
    </tbody>
</table>